<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>administrationServlet</servlet-name>
    <servlet-class>de.hdm.groupfive.itproject.server.AdministrationCommonImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>administrationServlet</servlet-name>
    <url-pattern>/itprojektss15/administration</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>administrationServlet</servlet-name>
    <url-pattern>/reportgen/administration</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
